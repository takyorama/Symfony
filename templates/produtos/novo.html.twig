{% extends 'produtos/layout.html.twig' %}

{% block sidebar %}{% endblock %}

{% block main %}
  {{ form_start(form, {'method': 'POST', 'action': path('produtos_lista')}) }}
  <div class="card alert-warning">
    {{ form_errors(form) }}
  </div>
  <div class="form-group offset-1 p-3">
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.descricao, 'Descrição: ') }}</div>
      <div class="col col-7">{{ form_widget(form.descricao, {'attr': {'class': 'form-control w-75'}}) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.id_fornecedor, 'Id do fornecedor: ') }}</div>
      <div class="col col-4">{{ form_widget(form.id_fornecedor, {'attr': {'class': 'form-control w-25'}}) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.fornecedor, 'Fornecedor: ') }}</div>
      <div class="col col-7">{{ form_widget(form.fornecedor, {'attr': {'class': 'form-control w-75'}}) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.dta_fabricacao, 'Data de fabricação: ') }}</div>
      <div class="col">{{ form_widget(form.dta_fabricacao) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.dta_validade, 'Data de vencimento: ') }}</div>
      <div class="col">{{ form_widget(form.dta_validade) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.quantidade, 'Quantidade: ') }}</div>
      <div class="col col-4">{{ form_widget(form.quantidade, {'attr': {'class': 'form-control w-25'}}) }}</div>
    </div>
    <div class="row p-2">
      <div class="col col-2">{{ form_label(form.preco, 'Preço: ') }}</div>
      <div class="col col-4">{{ form_widget(form.preco, {'attr': {'class': 'form-control w-25'}}) }}</div>
    </div>
    {{ form_widget(form.enviar, {'attr': {'class': 'btn'}})}}
  </div>
  {{ form_end(form) }}
{% endblock %}
